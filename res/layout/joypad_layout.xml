<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:id="@+id/joypad_layout">
    <org.kealinghornets.nxtdroid.app.Joypad.JoypadView
        android:id="@+id/joypad_dpad"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"/>
    <RelativeLayout
        android:id="@+id/joypad_midsection"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2">
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/joypad_button_container"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="4"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/joypad_button_row_1"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_alignParentRight="true"
            android:layout_weight="1">
            <LinearLayout
                android:id="@+id/joypad_button_1_container"
                android:background="@drawable/log_border"
                android:padding="1dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <include layout="@layout/list_row" android:id="@+id/joypad_button_1"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/joypad_button_2_container"
                android:background="@drawable/log_border"
                android:padding="1dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <include layout="@layout/list_row" android:id="@+id/joypad_button_2"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/joypad_button_3_container"
                android:background="@drawable/log_border"
                android:padding="1dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <include layout="@layout/list_row" android:id="@+id/joypad_button_3"/>
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/joypad_button_row_2"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_below="@id/joypad_button_row_1"
            android:layout_alignParentRight="true"
            android:layout_weight="1">
            <LinearLayout
                android:id="@+id/joypad_button_4_container"
                android:background="@drawable/log_border"
                android:padding="1dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <include layout="@layout/list_row" android:id="@+id/joypad_button_4"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/joypad_button_5_container"
                android:background="@drawable/log_border"
                android:padding="1dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <include layout="@layout/list_row" android:id="@+id/joypad_button_5"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/joypad_button_6_container"
                android:background="@drawable/log_border"
                android:padding="1dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <include layout="@layout/list_row" android:id="@+id/joypad_button_6"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>